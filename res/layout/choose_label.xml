<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:background="@drawable/b111"
    android:orientation="vertical" >

    <ImageView
        android:rotation="90"
        android:id="@+id/imageLabel"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="70dp" />

  	<TextView
  	    android:id="@+id/spinnerText1"
  	    android:layout_width="250dp"
  	    android:textSize="15sp"
  	    android:layout_height="wrap_content"
  	    android:layout_centerHorizontal="true"
  	    android:layout_below="@+id/imageLabel"
  	     />
  	<TextView
  	    android:id="@+id/spinnerText2"
  	    android:layout_width="250dp"
  	    android:textSize="15sp"
  	    android:layout_height="wrap_content"
  	    android:layout_centerHorizontal="true"
  	    android:layout_below="@+id/spinnerText1"
  	  />
  	<TextView
  	    android:textSize="15sp"
  	    android:id="@+id/spinnerText3"
  	    android:layout_width="250dp"
  	    android:layout_height="wrap_content"
  	    android:layout_centerHorizontal="true"
  	    android:layout_below="@+id/spinnerText2"
  	    />
  	<Spinner
  	    android:id="@+id/Spinner03"
  	    android:layout_width="fill_parent"
  	    android:layout_height="wrap_content"
  	    android:layout_alignParentBottom="true"
  	     />

  	<Spinner
  	    android:id="@+id/Spinner02"
  	    android:layout_width="fill_parent"
  	    android:layout_height="wrap_content"
  	    android:layout_alignParentLeft="true"
  	    android:layout_above="@+id/Spinner03" />

  	<Spinner
  	    android:id="@+id/Spinner01"
  	    android:layout_width="fill_parent"
  	    android:layout_height="wrap_content" 
  	    android:layout_above="@+id/Spinner02"	    
  	     />

  	<Button
  	    android:id="@+id/button2"
  	    android:layout_width="fill_parent"
  	    android:layout_height="wrap_content"
  	    android:layout_above="@+id/imageLabel"
  	    android:layout_marginBottom="5dp"
  	    android:text="添加" />
  	

</RelativeLayout>

